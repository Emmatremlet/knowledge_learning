{% extends 'base.html.twig' %}

{% block title %}Détails de la leçon :
	{{ lesson.name }}
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="text-center primary mb-4">{{ lesson.name }}</h1>

		<div class="card shadow-lg" style="background-color: #f1f8fc; color: #384050;">
			<div class="card-body">
				<h2 class="card-title primary mb-3">Description</h2>
				<p class="card-text">{{ lesson.description }}</p>

				<h3 class="primary mt-4">Contenu</h3>
				<p>{{ lesson.content }}</p>

				<div class="text-center mt-4">
					<a href="/lesson/add-to-cart/{{ lesson.id }}" class="btn button w-50">Ajouter au panier</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
