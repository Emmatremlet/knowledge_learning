{% extends 'base.html.twig' %}

{% block title %}Mes Certifications
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="text-center primary">Mes Certifications</h1>

		{% if certifications|length > 0 %}
			<ul class="list-group mt-4">
				{% for certification in certifications %}
					<li class="list-group-item d-flex justify-content-between align-items-center">
						<div>
							<h5>{{ certification.cursus.name }}</h5>
							<p class="mb-0 text-muted">Obtenue le
								{{ certification.validatedAt|date('d/m/Y') }}</p>
						</div>
						<span class="badge bg-success">Valid√©e</span>
					</li>
				{% endfor %}
			</ul>
		{% else %}
			<p class="text-center secondary">Vous n'avez pas encore de certifications.</p>
		{% endif %}
	</div>
{% endblock %}
